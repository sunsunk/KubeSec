load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//bazel:pl_build_system.bzl", "pl_go_binary", "pl_go_image")

go_library(
    name = "pgsql_lib",
    srcs = ["demo_client.go"],
    importpath = "px.dev/pixie/src/stirling/source_connectors/socket_tracer/testing/containers/pgsql",
    visibility = ["//visibility:private"],
    deps = [
        "@com_github_jmoiron_sqlx//:sqlx",
        "@com_github_lib_pq//:pq",
        "@com_github_spf13_pflag//:pflag",
    ],
)

pl_go_binary(
    name = "demo_client",
    embed = [":pgsql_lib"],
    visibility = ["//src/stirling:__subpackages__"],
)

pl_go_image(
    name = "demo_client_image",
    binary = ":demo_client",
    visibility = ["//src/stirling:__subpackages__"],
)
