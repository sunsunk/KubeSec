{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@images/*": ["images/*"],
      "@components/*": ["components/*"],
      "@config": ["config"],
      "@context": ["context"],
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@errors": ["errors"],
      "@hooks": ["hooks"],
      "@models": ["models"],
      "@routes/*": ["routes/*"],
      "@strings": ["strings"],
      "@services/*": ["services/*"],
      "@utils": ["utils"],
      "@views/*": ["views/*"],
      "@db": ["db"]
    },
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
